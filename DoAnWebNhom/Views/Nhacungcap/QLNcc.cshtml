@model IEnumerable<DoAnWebNhom.Models.NHACUNGCAP>

@{
    ViewBag.Title = "Quản lý HÃNG XE";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ HÃNG XE NHÀ CUNG CẤP</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Create")
</p>
<table class="table">
    <tr>
        <th>
            TÊN NHÀ CUNG CẤP
        </th>
        <th>
            ĐỊA CHỈ
        </th>
        <th>
            ĐIỆN THOẠI
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNCC }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNCC }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNCC })
            </td>
        </tr>
    }

</table>
