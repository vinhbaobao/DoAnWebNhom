@model IEnumerable<DoAnWebNhom.Models.KHACHHANG>

@{
    ViewBag.Title = "Quản lý tài khoản khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">TẤT CẢ TÀI KHOẢN KHÁCH HÀNG</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","QLTaikhoanKH")" class="btn btn-success btn-sm"><i class="fas fa-plus"></i>Thêm</a>
                <a href="Detrash" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Thùng rác</a>
            </div>
            <div><br /></div>
        </div>
    </div>
    <div class="card-body">
        <table id="myTable" class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaKH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoTen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TaiKhoan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Matkhau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiaChiKH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DienThoaiKH)
                    </th>
                    <th style="width:200px;" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input name="STT" type="checkbox" class="text-center" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaiKhoan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Matkhau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoaiKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoaiKH)
                        </td>
                        <td class="text-center">
                            <a class="btn btn-info btn-sm" href="@Url.Action("Edit","QLTaikhoanKH",new { id =item.MaKH  })"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Details","QLTaikhoanKH",new { id = item.MaKH })"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","QLTaikhoanKH",new { id = item.MaKH })"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>